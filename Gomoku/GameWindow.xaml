<Window x:Class="Gomoku.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gomoku"
        mc:Ignorable="d"
        Title="GameWindow" Height="450" Width="800">
    <Window.Resources>
        <ControlTemplate x:Key="EmptySquare" TargetType="Button">
            <Grid Margin="3">
                <Ellipse x:Name="backgroundElement" Fill="Transparent" Stroke="Transparent" />
                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
            </Grid>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="true">
                    <Setter Property="Fill" TargetName="backgroundElement" Value="#6600FFFF"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
        <ControlTemplate x:Key="BlackGamePiece" TargetType="Button">
            <Grid Margin="3">
                <Ellipse x:Name="backgroundElement" Fill="Black" Stroke="Gray" />
                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
            </Grid>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="true">
                    <Setter Property="Fill" TargetName="backgroundElement" Value="Black"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
        <ControlTemplate x:Key="BlackNewGamePiece" TargetType="Button">
            <Grid Margin="3">
                <Ellipse x:Name="backgroundElement" Fill="Black" Stroke="Gray" />
                <Ellipse VerticalAlignment="Center" HorizontalAlignment="Center" Height="10" Width="10" Fill="White"/>
                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
            </Grid>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="true">
                    <Setter Property="Fill" TargetName="backgroundElement" Value="Black"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
        <ControlTemplate x:Key="WhiteGamePiece" TargetType="Button">
            <Grid Margin="3">
                <Ellipse x:Name="backgroundElement" Fill="White" Stroke="Gray" />
                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
            </Grid>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="true">
                    <Setter Property="Fill" TargetName="backgroundElement" Value="White"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
        <ControlTemplate x:Key="WhiteNewGamePiece" TargetType="Button">
            <Grid Margin="3">
                <Ellipse x:Name="backgroundElement" Fill="White" Stroke="Gray" />
                <Ellipse VerticalAlignment="Center" HorizontalAlignment="Center" Height="10" Width="10" Fill="Black"/>
                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
            </Grid>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="true">
                    <Setter Property="Fill" TargetName="backgroundElement" Value="White"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
    </Window.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" MinWidth="100"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="1*" MinWidth="100"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="StatusDisplay" FontSize="18">我方先手，我方回合</TextBox>
        <Viewbox Grid.Column="1" Stretch="Uniform">
            <Grid Height="600" Width="600" x:Name="GameBoard" Background="#F0F0B4">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Line Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="15" VerticalAlignment="Center" Height="1" StrokeThickness="10" X1="20" X2="580" Stroke="Black" />
                <Line Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="15" VerticalAlignment="Center" Height="1" StrokeThickness="10" X1="20" X2="580" Stroke="Black" />
                <Line Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="15" VerticalAlignment="Center" Height="1" StrokeThickness="10" X1="20" X2="580" Stroke="Black" />
                <Line Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="15" VerticalAlignment="Center" Height="1" StrokeThickness="10" X1="20" X2="580" Stroke="Black" />
                <Line Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="15" VerticalAlignment="Center" Height="1" StrokeThickness="10" X1="20" X2="580" Stroke="Black" />
                <Line Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="15" VerticalAlignment="Center" Height="1" StrokeThickness="10" X1="20" X2="580" Stroke="Black" />
                <Line Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="15" VerticalAlignment="Center" Height="1" StrokeThickness="10" X1="20" X2="580" Stroke="Black" />
                <Line Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="15" VerticalAlignment="Center" Height="1" StrokeThickness="10" X1="20" X2="580" Stroke="Black" />
                <Line Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="15" VerticalAlignment="Center" Height="1" StrokeThickness="10" X1="20" X2="580" Stroke="Black" />
                <Line Grid.Row="9" Grid.Column="0" Grid.ColumnSpan="15" VerticalAlignment="Center" Height="1" StrokeThickness="10" X1="20" X2="580" Stroke="Black" />
                <Line Grid.Row="10" Grid.Column="0" Grid.ColumnSpan="15" VerticalAlignment="Center" Height="1" StrokeThickness="10" X1="20" X2="580" Stroke="Black" />
                <Line Grid.Row="11" Grid.Column="0" Grid.ColumnSpan="15" VerticalAlignment="Center" Height="1" StrokeThickness="10" X1="20" X2="580" Stroke="Black" />
                <Line Grid.Row="12" Grid.Column="0" Grid.ColumnSpan="15" VerticalAlignment="Center" Height="1" StrokeThickness="10" X1="20" X2="580" Stroke="Black" />
                <Line Grid.Row="13" Grid.Column="0" Grid.ColumnSpan="15" VerticalAlignment="Center" Height="1" StrokeThickness="10" X1="20" X2="580" Stroke="Black" />
                <Line Grid.Row="14" Grid.Column="0" Grid.ColumnSpan="15" VerticalAlignment="Center" Height="1" StrokeThickness="10" X1="20" X2="580" Stroke="Black" />
                <Line Grid.Row="0" Grid.RowSpan="15" Grid.Column="0" HorizontalAlignment="Center" Width="1" StrokeThickness="10" Y1="20" Y2="580" Stroke="Black"/>
                <Line Grid.Row="0" Grid.RowSpan="15" Grid.Column="1" HorizontalAlignment="Center" Width="1" StrokeThickness="10" Y1="20" Y2="580" Stroke="Black"/>
                <Line Grid.Row="0" Grid.RowSpan="15" Grid.Column="2" HorizontalAlignment="Center" Width="1" StrokeThickness="10" Y1="20" Y2="580" Stroke="Black"/>
                <Line Grid.Row="0" Grid.RowSpan="15" Grid.Column="3" HorizontalAlignment="Center" Width="1" StrokeThickness="10" Y1="20" Y2="580" Stroke="Black"/>
                <Line Grid.Row="0" Grid.RowSpan="15" Grid.Column="4" HorizontalAlignment="Center" Width="1" StrokeThickness="10" Y1="20" Y2="580" Stroke="Black"/>
                <Line Grid.Row="0" Grid.RowSpan="15" Grid.Column="5" HorizontalAlignment="Center" Width="1" StrokeThickness="10" Y1="20" Y2="580" Stroke="Black"/>
                <Line Grid.Row="0" Grid.RowSpan="15" Grid.Column="6" HorizontalAlignment="Center" Width="1" StrokeThickness="10" Y1="20" Y2="580" Stroke="Black"/>
                <Line Grid.Row="0" Grid.RowSpan="15" Grid.Column="7" HorizontalAlignment="Center" Width="1" StrokeThickness="10" Y1="20" Y2="580" Stroke="Black"/>
                <Line Grid.Row="0" Grid.RowSpan="15" Grid.Column="8" HorizontalAlignment="Center" Width="1" StrokeThickness="10" Y1="20" Y2="580" Stroke="Black"/>
                <Line Grid.Row="0" Grid.RowSpan="15" Grid.Column="9" HorizontalAlignment="Center" Width="1" StrokeThickness="10" Y1="20" Y2="580" Stroke="Black"/>
                <Line Grid.Row="0" Grid.RowSpan="15" Grid.Column="10" HorizontalAlignment="Center" Width="1" StrokeThickness="10" Y1="20" Y2="580" Stroke="Black"/>
                <Line Grid.Row="0" Grid.RowSpan="15" Grid.Column="11" HorizontalAlignment="Center" Width="1" StrokeThickness="10" Y1="20" Y2="580" Stroke="Black"/>
                <Line Grid.Row="0" Grid.RowSpan="15" Grid.Column="12" HorizontalAlignment="Center" Width="1" StrokeThickness="10" Y1="20" Y2="580" Stroke="Black"/>
                <Line Grid.Row="0" Grid.RowSpan="15" Grid.Column="13" HorizontalAlignment="Center" Width="1" StrokeThickness="10" Y1="20" Y2="580" Stroke="Black"/>
                <Line Grid.Row="0" Grid.RowSpan="15" Grid.Column="14" HorizontalAlignment="Center" Width="1" StrokeThickness="10" Y1="20" Y2="580" Stroke="Black"/>
            </Grid>
        </Viewbox>
        <ScrollViewer Grid.Column="2" x:Name="LogScrollViewer">
            <TextBlock Grid.Column="2" x:Name="LogBlock"/>
        </ScrollViewer>
        <Border x:Name="LoadingBorder" Grid.Column="0" Grid.ColumnSpan="3" Background="LightGray" Visibility="Visible">
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="40">正在匹配...</TextBlock>
        </Border>
    </Grid>
</Window>
